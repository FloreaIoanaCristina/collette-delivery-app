<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.Others.Background"
    tools:context=".OnboardingSupportActivity"
   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.Licenta"
            android:padding="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewBunVenit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Bine ai venit!"
                android:theme="@style/Theme.Others.Text"
                android:textSize="40dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/hand_image_view"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_weight="1"
                android:background="@drawable/hand_animation_file"
                android:gravity="center"
                android:maxWidth="10dp"
                android:maxHeight="10dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewJudet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:text="Judet:"
                    android:theme="@style/Theme.Others.Text" />

                <Spinner
                    android:id="@+id/spinnerJudete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:theme="@style/Theme.Others.Text"
                    android:background="@drawable/custom_edit_text_2"
                    android:entries="@array/judete" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewLocalitate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:ems="15"
                    android:text="Localitate/Sector"
                    android:theme="@style/Theme.Others.Text" />

                <EditText
                    android:id="@+id/editTextLocalitate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/custom_edit_text_2"
                    android:hint="Nume Localitate/Numar Sector" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewAdresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="15"
                    android:text="Adresa"
                    android:textSize="15dp"
                    android:theme="@style/Theme.Others.Text"/>

                <EditText
                    android:id="@+id/editTextAdresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/custom_edit_text_2"
                    android:hint="Adresa" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewCodPostal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:ems="15"
                    android:text="Cod Postal"
                    android:theme="@style/Theme.Others.Text"/>

                <EditText
                    android:id="@+id/editTextCodPostal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_edit_text_2"
                    android:hint="Cod Postal"
                    android:inputType="number" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewPozaProfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Aproape ai terminat! Acum adauga-ti o poza de profil!"
                android:theme="@style/Theme.Others.Text"
                android:textSize="25dp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/poza_profil_generica"
                android:scaleType="fitCenter"


                />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imageButtonRotesc"
                android:layout_width="24dp"
                android:layout_margin="8dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="Aminteste-mi mai tarziu" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/buttonConfirma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:theme="@style/Theme.Others.Button"
                        android:text="Confirma"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>