<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout_login"
    android:theme="@style/Theme.Signup.Background.Color"
    tools:context=".LoginActivity"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:theme="@style/Theme.Login.Background"></ImageView>

    <androidx.cardview.widget.CardView
        android:theme="@style/Theme.Login.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="200dp"
        android:background="@drawable/custom_edit_text">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:theme="@style/Theme.Login.CardView"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edit_text"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="Email"
                android:padding="8dp"
                android:theme="@style/Theme.Login.EditText">

            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:background="@drawable/custom_edit_text">

                <ImageButton
                    android:id="@+id/password_eye_toggle"
                    android:layout_width="24dp"
                    android:layout_gravity="center"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_baseline_lock_24"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    ></ImageButton>
                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent">
                </Space>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/custom_custom_edit_text"
                    android:id="@+id/login_password"
                    android:theme="@style/Theme.Login.EditText"
                    android:hint="Parola"
                    android:layout_gravity="center_vertical"
                    android:inputType="textPassword">


                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:theme="@style/Theme.Login.CardView"
                >
                <CheckBox
                    android:id="@+id/checkBoxRememberMe"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:buttonTint="@color/malibu_blue"
                    android:hint ="Remember me"
                    android:textSize="15dp"
                    android:paddingRight="110dp"
                    android:layout_gravity="right"
                    android:theme="@style/Theme.Licenta"
                    />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Conecteaza-te"
                android:backgroundTint="@color/malibu_blue"
                android:id="@+id/login_button"
                android:theme="@style/Theme.Licenta"
                app:cornerRadius="100dp"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nu ai cont? Inregistreaza-te!"
        android:textSize="20dp"
        android:textColor="@color/malibu_blue"
        android:textAlignment="center"
        android:theme="@style/Theme.Login.Text"
        android:id="@+id/login_sign_up_text" />
</LinearLayout>