<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/forest_green">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitStart"
                    android:layout_gravity="clip_vertical"
                    android:padding="5dp"
                    app:srcCompat="@drawable/resource_package" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewCodComanda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/happy_yellow"
                    android:text="Cod comanda:   " />
                <TextView
                    android:id="@+id/codComanda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/happy_yellow"
                    android:text="cod" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewNumeExpeditor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/happy_yellow"
                            android:text="Expeditor:   " />
                        <TextView
                            android:id="@+id/numeExpeditor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/happy_yellow"
                            android:text="nume" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:id="@+id/textViewAdresaExpediere"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/happy_yellow"
                            android:text="Adresa expediere:   " />
                        <TextView
                            android:id="@+id/adresaExpediere"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/happy_yellow"
                            android:text="adresa" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewNumeDestinatar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/happy_yellow"
                            android:text="Destinatar:   " />
                        <TextView
                            android:id="@+id/numeDestinatar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/happy_yellow"
                            android:text="nume" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textViewAdresaDestinatar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/happy_yellow"
                            android:text="Adresa destinatie:   " />
                        <TextView
                            android:id="@+id/adresaDestinatar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/happy_yellow"
                            android:text="adresa" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textViewStareComanda"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/cute_pink"
                        android:layout_weight="1"
                        android:layout_gravity="end"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:text="Stare comanda:  " />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/cardview_compat_inset_shadow"
                        android:layout_gravity="right"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/stareComanda"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cute_pink"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_gravity="end"
                        android:textSize="20dp"
                        android:paddingRight="5dp"
                        android:textAlignment="viewEnd"
                        android:text="stare" />
                    </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="5dp" />

</LinearLayout>