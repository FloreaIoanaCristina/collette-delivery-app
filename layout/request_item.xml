<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:backgroundTint="@color/malibu_blue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewPozaCerere"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="left"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:background="@drawable/round_image"
                android:clipToOutline="true"
                tools:src="@tools:sample/avatars" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:id="@+id/tvCardViewCerere"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="O persoana vrea sa va imprieteniti!"
                        android:textColor="@color/white"
                        android:textSize="25dp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/buttonDa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"
                        android:paddingRight="2dp"
                        android:paddingLeft="2dp"
                        android:background="@drawable/custom_edit_text_2"
                        android:text="Accepta" />
                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"></Space>

                    <Button
                        android:id="@+id/buttonNu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="2dp"
                        android:paddingLeft="2dp"
                        android:textColor="@color/white"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/custom_edit_text_2"
                        android:text="Respinge" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <Space
        android:layout_width="20dp"
        android:layout_height="10dp"></Space>

</LinearLayout>