<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/Theme.Home.Background"
    tools:context=".ui.main.paginaCont" >
    <FrameLayout
        android:id="@+id/fragmentEditare"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="@color/malibu_blue">

        <ImageView
            android:id="@+id/imageViewProfil"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:scaleType="fitXY"
            android:src="@drawable/poza_profil_generica" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewNume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="30dp"
        android:theme="@style/Theme.Home.Text"
        android:gravity="center"/>
    <EditText
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:editable="false"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewUID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.Home.Text"
            android:layout_gravity="center_vertical"
            android:textSize="16dp"
            android:paddingLeft="5dp"
            android:text="UID: " />

        <EditText
            android:id="@+id/editTextUID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:textIsSelectable="true"
            android:theme="@style/Theme.Home.Text"
            android:gravity="center"
            android:ems="20"
            android:textSize="18dp"
            android:text="Name" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewInfo"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:theme="@style/Theme.Home.Text"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:paddingLeft="5dp"
        android:text="Informatii personale:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTelefonCont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:paddingLeft="5dp"
            android:text="Nr telefon:"
            android:textSize="16dp"
            android:theme="@style/Theme.Home.Text" />

        <TextView
            android:id="@+id/textViewTelefonInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:theme="@style/Theme.Home.Text"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewJudetCont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:paddingLeft="5dp"
            android:ems="8"
            android:theme="@style/Theme.Home.Text"
            android:text="Judet:" />

        <TextView
            android:id="@+id/textViewBrandInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:theme="@style/Theme.Home.Text"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewLocalitateCont"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:paddingLeft="5dp"
            android:ems="8"
            android:theme="@style/Theme.Home.Text"
            android:text="Localitate/Sector:" />

        <TextView
            android:id="@+id/textViewLocalitateInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:theme="@style/Theme.Home.Text"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewAdresaCont"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:paddingLeft="5dp"
            android:ems="8"
            android:theme="@style/Theme.Home.Text"
            android:text="Adresa:" />

        <TextView
            android:id="@+id/textViewAdresaInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:theme="@style/Theme.Home.Text"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewPostal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:paddingLeft="5dp"
            android:ems="8"
            android:theme="@style/Theme.Home.Text"
            android:text="Cod postal:" />

        <TextView
            android:id="@+id/textViewCodPostalInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:theme="@style/Theme.Home.Text"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:weightSum="3"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonEditeazaProfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="1dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:backgroundTint="@color/malibu_blue"
            android:textColor="@color/white"
            android:text="Editeaza Profil"
            />

        <Button
            android:id="@+id/buttonSignOut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="1dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/malibu_blue"
            android:text="Sign out"

            />

        <Button
            android:id="@+id/buttonStergeCont"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="1dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/malibu_blue"
            android:text="Sterge Cont"
            />
    </LinearLayout>



</LinearLayout>