<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".paginaCard">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="200dp"
            android:backgroundTint="@color/forest_green"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="@color/happy_yellow"
                            android:padding="12dp"
                            android:textStyle="bold"
                            android:text="Nr: " />

                        <EditText
                            android:id="@+id/etNrCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/happy_yellow"
                            android:background="@drawable/custom_edit_text_2"
                            android:ems="10"
                            android:layout_margin="5dp"
                            android:textSize="20dp"
                            android:padding="10dp"
                            android:inputType="phone"
                            android:hint="nr card"
                            android:textColorHint="@color/white"
                             />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView31"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textSize="20dp"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/happy_yellow"
                            android:text="Expirare: " />

                        <EditText
                            android:id="@+id/etLunaCard"
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/happy_yellow"
                            android:layout_weight="1"
                            android:textSize="20dp"
                            android:background="@drawable/custom_edit_text_2"
                            android:ems="5"
                            android:padding="10dp"
                            android:inputType="phone"
                            android:hint=" luna(MM) "
                            android:textColorHint="@color/white"
                             />

                        <EditText
                            android:id="@+id/etAnCard"
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/happy_yellow"
                            android:layout_weight="1"
                            android:background="@drawable/custom_edit_text_2"
                            android:ems="5"
                            android:padding="10dp"
                            android:textSize="20dp"
                            android:inputType="phone"
                            android:hint=" an(YYYY)"
                            android:textColorHint="@color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/happy_yellow"
                            android:textSize="20dp"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:text="Nume posesor: "/>

                        <EditText
                            android:id="@+id/etNumeCard"
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/happy_yellow"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:background="@drawable/custom_edit_text_2"
                            android:ems="10"
                            android:textSize="20dp"
                            android:inputType="textPersonName"
                            android:hint=" nume"
                            android:textColorHint="@color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView28"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/happy_yellow"
                            android:textSize="20dp"
                            android:padding="12dp"
                            android:textStyle="bold"
                            android:text="CVC: " />

                        <EditText
                            android:id="@+id/etCvcCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/happy_yellow"
                            android:background="@drawable/custom_edit_text_2"
                            android:layout_weight="1"
                            android:inputType="numberPassword"
                            android:padding="10dp"
                            android:textSize="20dp"
                            android:layout_marginBottom="10dp"
                            android:hint=" cod"
                            android:textColorHint="@color/white"
                            />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="clip_vertical"
                        android:padding="10dp"
                        app:srcCompat="@drawable/creditcard" />


                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <Space
            android:layout_width="match_parent"
            android:layout_height="3dp"></Space>
    <Button
        android:id="@+id/btnCardSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SALVEAZA CARD"
        android:textColor="@color/white"
        android:backgroundTint="@color/malibu_blue"></Button>
</LinearLayout>