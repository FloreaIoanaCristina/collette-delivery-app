<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Home.Background"
    android:paddingTop="10dp"
    android:orientation="vertical"
    tools:context=".FriendsTrimActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonSearchTrim"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/malibu_blue"
                    android:text="@string/pagina_prieteni_search_button"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/editTextFriendNameTrim"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/custom_edit_text3"
                    android:ems="10"
                    android:hint="@string/pagina_prieteni_search_edit"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:paddingLeft="5dp"
                    android:theme="@style/Theme.Others.Text"
                    android:textColorHint="#808080" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPrieteniTrim"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />



            </LinearLayout>







</LinearLayout>