<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="200dp"
        android:backgroundTint="@color/forest_green"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/happy_yellow"
                    android:padding="12dp"
                    android:textStyle="bold"
                    android:text="Nr: " />

                <TextView
                    android:id="@+id/textViewNrCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/happy_yellow"
                    android:textSize="25dp"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:text="..." />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="20dp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/happy_yellow"
                    android:text="Expirare: " />

                <TextView
                    android:id="@+id/textViewLunaCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/happy_yellow"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text=" luna" />

                <TextView
                    android:id="@+id/textViewAnCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/happy_yellow"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text=" an" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/happy_yellow"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:text="Nume posesor: "/>

                <TextView
                    android:id="@+id/textViewNumeCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/happy_yellow"
                    android:paddingBottom="5dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text=" nume" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/happy_yellow"
                    android:textSize="20dp"
                    android:paddingLeft="12dp"
                    android:textStyle="bold"
                    android:text="CVC: " />

                <EditText
                    android:id="@+id/textViewCvcCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_edit_text_2"
                    android:ems="3"
                    android:focusable="false"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:textColor="@color/happy_yellow"
                    android:textSize="25dp" />

                <ImageButton
                    android:id="@+id/eye"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:background="@drawable/ic_baseline_eye_24"
                    android:layout_gravity="center_vertical"
                    ></ImageButton>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="clip_vertical"
                android:padding="10dp"
                app:srcCompat="@drawable/creditcard" />

            <CheckBox
                android:id="@+id/checkBoxCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleX="3"
                android:scaleY="3"
                android:buttonTint="@color/malibu_blue"
                android:gravity="center"
                android:text="" />

        </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"></Space>
</LinearLayout>