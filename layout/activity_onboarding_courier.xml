<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Others.Background"
    tools:context=".OnboardingCourierActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewBunVenit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Bine ai venit!"
                android:theme="@style/Theme.Others.Text"
                android:textSize="40dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/hand_image_view_courier"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/hand_animation_file"
                android:gravity="center_vertical"
                android:maxWidth="10dp"
                android:maxHeight="10dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/textViewPozaProfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Aproape ai terminat! Acum adauga-ti o poza de profil!"
                android:theme="@style/Theme.Others.Text"
                android:textSize="25dp" />

            <ImageButton
                android:id="@+id/imageButtonCurier"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/poza_profil_generica"
                android:scaleType="fitCenter"


                />


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imageButtonRoteste"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:scaleType="fitCenter"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/buttonConfirmaCurier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:theme="@style/Theme.Others.Button"
                        android:text="Confirma"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>