<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/Theme.Home.Background"
    tools:context=".ui.main.paginaAcasa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Licenta"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewAcasa"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/home_pachete" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:editable="false"
            android:background="@color/white"/>
        <Button
            android:id="@+id/buttonAdaugaComandaNoua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.Home.Button"
            android:textColor="@color/white"
            android:text="Adauga Comanda Noua" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPachete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>


</LinearLayout>