<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Home.Background"
    android:orientation="vertical"
    tools:context=".ui.main.paginaPrieteni">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:theme="@style/Theme.Home.Text"
                android:text="REFRESH"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonSearch"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/malibu_blue"
                    android:text="@string/pagina_prieteni_search_button"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/editTextFriendName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/custom_edit_text3"
                    android:ems="10"
                    android:layout_weight="1"
                    android:hint="@string/pagina_prieteni_search_edit"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:paddingLeft="5dp"
                   android:theme="@style/Theme.Others.Text"
                    android:textColorHint="#808080" />
            </LinearLayout>

            <TextView
                android:padding="5dp"
                android:id="@+id/textViewCereri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_baseline_people_24"
                android:text="Cereri de prietenie"
                android:theme="@style/Theme.Home.Text"
                android:textSize="20dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewCereri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewAddFriend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"

                    android:text="@string/pagina_prieteni_add_text"
                    android:theme="@style/Theme.Home.Text"
                    android:textSize="24dp"
                    app:autoSizeTextType="uniform" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonAddFriend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/malibu_blue"
                    android:text="@string/pagina_prieteni_add_button"
                    android:textColor="@color/white" />
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPrieteni"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>