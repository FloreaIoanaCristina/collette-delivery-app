                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:isIndicator="true"
                            android:colorControlNormal="@color/white"
                            android:progressTint="@color/happy_yellow"
                            android:scrollbarSize="30dp"
