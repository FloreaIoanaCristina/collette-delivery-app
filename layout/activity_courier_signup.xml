<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.Signup.Background.Color"
    tools:context=".CourierSignupActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:theme="@style/Theme.Courier.Background"></ImageView>


            <androidx.cardview.widget.CardView
                android:theme="@style/Theme.Login.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/custom_edit_text"
                app:cardCornerRadius="50dp"
                android:backgroundTint="@color/white"
                app:cardElevation="200dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:theme="@style/Theme.Licenta"
                    android:padding="24dp">

                    <EditText
                        android:id="@+id/signin_email_cr"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/custom_edit_text"
                        android:drawableLeft="@drawable/ic_baseline_email_24"
                        android:drawablePadding="8dp"
                        android:hint="Email"
                        android:textColorHint="#808080"
                        android:inputType="textEmailAddress"
                        android:padding="8dp"
                        android:theme="@style/Theme.Login.EditText"

                        >

                    </EditText>

                    <EditText
                        android:id="@+id/signin_username_cr"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/custom_edit_text"
                        android:drawableLeft="@drawable/ic_baseline_person_24"
                        android:drawablePadding="8dp"
                        android:hint="Nume"
                        android:textColorHint="#808080"
                        android:padding="8dp"
                        android:theme="@style/Theme.Login.EditText"


                        >

                    </EditText>

                    <EditText
                        android:id="@+id/signin_password_cr"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/custom_edit_text"
                        android:drawableLeft="@drawable/ic_baseline_lock_24"
                        android:drawablePadding="8dp"
                        android:hint="Parola"
                        android:textColorHint="#808080"
                        android:inputType="textPassword"
                        android:padding="8dp"
                        android:theme="@style/Theme.Login.EditText"


                        >

                    </EditText>

                    <EditText
                        android:id="@+id/confirm_password_cr"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/custom_edit_text"
                        android:drawableLeft="@drawable/ic_baseline_lock_24"
                        android:drawablePadding="8dp"
                        android:hint="Confirma Parola"
                        android:textColorHint="#808080"
                        android:inputType="textPassword"
                        android:padding="8dp"
                        android:theme="@style/Theme.Login.EditText"


                        >

                    </EditText>

                    <EditText
                        android:id="@+id/signin_telefon_cr"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/custom_edit_text"
                        android:drawableLeft="@drawable/ic_baseline_phone_24"
                        android:drawablePadding="8dp"
                        android:hint="Numar de telefon"
                        android:textColorHint="#808080"
                        android:inputType="phone"
                        android:padding="8dp"
                        android:theme="@style/Theme.Login.EditText" />

                    <EditText
                        android:id="@+id/signin_marca_cr"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/custom_edit_text"
                        android:drawableLeft="@drawable/ic_baseline_shield_24"
                        android:drawablePadding="8dp"
                        android:hint="Marca Masina"
                        android:textColorHint="#808080"
                        android:padding="8dp"
                        android:theme="@style/Theme.Login.EditText" />

                    <EditText
                        android:id="@+id/signin_model_cr"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/custom_edit_text"
                        android:drawableLeft="@drawable/ic_baseline_directions_car_24"
                        android:drawablePadding="8dp"
                        android:hint="Model Masina"
                        android:textColorHint="#808080"
                        android:padding="8dp"
                        android:theme="@style/Theme.Login.EditText" />

                    <EditText
                        android:id="@+id/signin_nr_cr"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/custom_edit_text"
                        android:drawableLeft="@drawable/ic_baseline_assignment_24"
                        android:drawablePadding="8dp"
                        android:hint="Nr inmatriculare"
                        android:textColorHint="#808080"
                        android:padding="8dp"
                        android:theme="@style/Theme.Login.EditText" />

                    <Spinner
                        android:id="@+id/signin_culoare_cr"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:entries="@array/culori"
                        android:background="@drawable/custom_edit_text"
                        android:drawableLeft="@drawable/ic_baseline_color_lens_24"
                        android:drawablePadding="8dp"
                        android:padding="8dp"
                        android:textColorHint="#808080"
                        android:theme="@style/Theme.Login.EditText" />

                    <Button
                        android:id="@+id/signin_button_cr"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="30dp"
                        android:backgroundTint="@color/malibu_blue"
                        android:text="Inregisteaza-te"
                        app:cornerRadius="100dp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/login_sign_up_text_cr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:text="Conecteaza-te"
                android:theme="@style/Theme.Login.Text"
                android:textAlignment="center"
                android:textColor="@color/malibu_blue"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/login_become_member_text_cr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:text="Inscrie-te ca si utilizator"
                android:theme="@style/Theme.Login.Text"
                android:textAlignment="center"
                android:textColor="@color/malibu_blue"
                android:textSize="20dp" />


        </LinearLayout>
  </ScrollView>
</LinearLayout>